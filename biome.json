{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "master"
  },
  "files": {
    "includes": ["**", "!**/node_modules", "!**/dist"]
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "lineWidth": 100
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {},
      "complexity": {
        "noBannedTypes": "off",
        "noUselessTypeConstraint": "error",
        "noForEach": "warn"
      },
      "correctness": {
        "noPrecisionLoss": "error",
        "noUnusedImports": {
          "level": "error",
          "fix": "safe"
        },
        "noUnusedVariables": "error",
        "useExhaustiveDependencies": "off",
        "useJsxKeyInIterable": "error"
      },
      "style": {
        "noNamespace": "off",
        "useImportType": "off",
        "noParameterAssign": "off",
        "noRestrictedImports": {
          "level": "error",
          "options": {
            "paths": {
              "@packages/orionjs-justo": "No usar más @packages/orionjs-justo, ahora importar todo desde types",
              "@packages/network": "No usar más @packages/network, ahora importar todo desde types",
              "@packages/justo-consts": "No usar más @packages/justo-consts, ahora importar todo desde types"
            }
          }
        }
      },
      "suspicious": {
        "noEmptyBlockStatements": "off",
        "noExplicitAny": "off",
        "noExtraNonNullAssertion": "error",
        "noMisleadingInstantiator": "error",
        "noUnsafeDeclarationMerging": "error",
        "noArrayIndexKey": "off",
        "noConfusingVoidType": "off"
      },
      "a11y": {
        "useAltText": "warn",
        "noSvgWithoutTitle": "warn"
      },
      "performance": {
        "noDelete": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "arrowParentheses": "asNeeded",
      "bracketSpacing": false,
      "bracketSameLine": false,
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "indentStyle": "space"
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space"
    }
  }
}
